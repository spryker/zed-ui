{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "zed-ui": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less"
        }
      },
      "root": "",
      "sourceRoot": "src/Spryker/Zed/ZedUi/Presentation/Components",
      "prefix": "zed",
      "architect": {
        "build": {
          "builder": "ngx-build-plus:browser",
          "options": {
            "outputPath": "../../../../../public/Zed/assets/js/zed-ui",
            "index": "src/Spryker/Zed/ZedUi/Presentation/Components/index.html",
            "main": "src/Spryker/Zed/ZedUi/Presentation/Components/main.ts",
            "polyfills": "src/Spryker/Zed/ZedUi/Presentation/Components/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/Spryker/Zed/ZedUi/Presentation/Components/assets"
            ],
            "styles": ["src/Spryker/Zed/ZedUi/Presentation/Components/styles.less"],
            "singleBundle": true,
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/Spryker/Zed/ZedUi/Presentation/Components/environments/environment.ts",
                  "with": "src/Spryker/Zed/ZedUi/Presentation/Components/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "none",
              "sourceMap": false,
              "extractCss": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "options": {
            "browserTarget": "zed-ui:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "zed-ui:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "zed-ui:build"
          }
        },
        "test": {
          "builder": "ngx-build-plus:karma",
          "options": {
            "main": "src/Spryker/Zed/ZedUi/Presentation/Components/test.ts",
            "polyfills": "src/Spryker/Zed/ZedUi/Presentation/Components/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [],
            "styles": [],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "zed-ui",
  "cli": {
    "analytics": false
  }
}
